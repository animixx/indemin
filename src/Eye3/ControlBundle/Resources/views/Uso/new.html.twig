{% extends '::base.html.twig' %}

{%- block body -%}
 

	<div class="page-content-area">
						<div class="page-header">
							<h1>Nuevo Usuario </h1>
						</div><!-- /.page-header -->

						<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->
								 {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
								<!-- #section:elements.form -->
							
								<div class="space-4"></div>
								<div class="space"></div>

								<div class="form-group">
									{{ form_label(form.nombre, '', { 'label_attr': { 'class': 'col-sm-2 control-label no-padding-right' }}) }}

										{{ form_widget(form.nombre, {'attr': {'class': 'col-xs-10 col-sm-3 col-sm-offset-1', 'placeholder': 'Ingrese nombre' }}) }}
									<div class="col-sm-3">
										{{ form_errors(form.nombre) }}
									</div>
								</div>	
								
								<div class="form-group">
									{{ form_label(form.username, '', { 'label_attr': { 'class': 'col-sm-2 control-label no-padding-right' }}) }}

										{{ form_widget(form.username, {'attr': {'class': 'col-xs-10 col-sm-3 col-sm-offset-1', 'placeholder': 'Ingrese usuario' }}) }}
									<div class="col-sm-3">
										{{ form_errors(form.username) }}
									</div>
								</div>	

								<div class="form-group">
									{{ form_label(form.genero, '', { 'label_attr': { 'class': 'col-sm-2 control-label no-padding-right' }}) }}

										{{ form_widget(form.genero, {'attr': {'class': 'col-xs-10 col-sm-3 col-sm-offset-1' }}) }}
									<div class="col-sm-3">
										{{ form_errors(form.genero) }}
									</div>
								</div>	
								<div class="form-group">	
									{{ form_label(form.password.first, '', {'label_attr':{'class':'col-sm-2 control-label no-padding-right'}}) }}

										{{ form_widget(form.password.first, {'attr': {'class': 'col-xs-10 col-sm-3 col-sm-offset-1', 'placeholder': 'Ingrese contraseña' }}) }}
									<div class="col-sm-3">
										{{ form_errors(form.password.first) }} <br> {{ form_errors(form.password.second) }}
									</div>
								</div>
								<div class="form-group">	
									{{ form_label(form.password.second, '', {'label_attr':{'class':'col-sm-2 control-label no-padding-right' }}) }}

										{{ form_widget(form.password.second, {'attr': {'class': 'col-xs-10 col-sm-3 col-sm-offset-1', 'placeholder': 'Confirme contraseña' }}) }}
									<div class="col-sm-3">
										{{ form_errors(form.password.first) }} <br> {{ form_errors(form.password.second) }}
									</div>
								</div>
								
								<div class="form-group">
									{{ form_label(form.email, '', { 'label_attr': { 'class': 'col-sm-2 control-label no-padding-right' }}) }}

										{{ form_widget(form.email, {'attr': {'class': 'col-xs-10 col-sm-3 col-sm-offset-1', 'placeholder': 'Ingrese email' }}) }}
									<div class="col-sm-3">
										{{ form_errors(form.email) }}
									</div>
								</div>
								<div class="form-group">
									{{ form_label(form.tipo, '', { 'label_attr': { 'class': 'col-sm-2 control-label no-padding-right' }}) }}

										{{ form_widget(form.tipo, {'attr': {'class': 'col-xs-10 col-sm-3 col-sm-offset-1' }}) }}
									<div class="col-sm-3">
										{{ form_errors(form.tipo) }}
									</div>
								</div>

								<!-- /section:elements.form -->
								<div class="space-4"></div>

								<div class="space"></div>

								<div class="clearfix form-actions">
								<div class="col-md-offset-5 col-md-7">


								{{ form_widget(form.submit, {'label':'Guardar', 'attr':{'class':'btn btn-info'}}) }}

								&nbsp; &nbsp;
								<button type="reset" class="btn">
									<i class="ace-icon fa fa-undo bigger-110"></i>
									Borrar
								</button>
							</div>
						</div>
						{{ form_end(form) }}
	
	

        <a class="btn btn-green" href="{{ path('usuarios') }}">
            listado
        </a>

{% endblock %}
