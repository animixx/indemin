{% extends '::base.html.twig' %}

{% block body -%}
	<div class="page-header"><h1>Uso del Sistema</h1></div>
	
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="center" >Nombre</th>
                <th class="center" >Accion</th>
                <th class="center" >Fecha</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="center" >{{ entity.usuario.nombre }}</td>
                <td class="center" >{{ entity.accion }}</td>
                <td class="center" >{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
               
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
