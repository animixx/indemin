{% extends "::base.html.twig" %}

{% block title %}Control Estadisticas{% endblock %}

{% block stylesheets %}
{{ parent() }}
		<link rel="stylesheet" href="{{ asset('bundles/eye3control/css/datepicker.css') }}" />

{% endblock %}

{% block body %}

	<div class="row" >
		<div class="col-xs-5"></div>
		<div class="col-xs-2">
			<!-- #section:plugins/date-time.datepicker -->
			<div class="input-group">
				<input class="form-control date-picker" id="id-date-picker-1" type="text" data-date-format="dd-mm-yyyy" placeholder="10-07-2014" />
				<span class="input-group-addon">
					<i class="fa fa-calendar bigger-110"></i>
				</span>
			</div>
		</div>
	</div>
	
{% set totales = {} %}

{% for grua in tablas %}

	{% if loop.length == 1 and grua.grua == "Grúa-2" %}
			<div class="row">
				<div class="page-header"><h1>Sin datos para la Grúa-1 </h1></div>
			</div><!-- /.row -->
	{% endif %}	
	
			<div class="row">
				<div class="col-12">
					<div class="page-header"><h1>{{grua.grua}} </h1></div>
				</div>
				<div class="col-xs-5">
						<table class="table table-striped table-bordered table-hover">
									<thead>
										<tr>
											<th class="center">
												Cami&oacute;n
											</th>
											<th class="center">
												Tiempo de Uso
											</th>
											<th class="center">
												Promedio
											</th>
											<th class="center">
												Veces
											</th>
											
										</tr>
									</thead>

									<tbody>
										{% set total = 0 %}
										{% set aux = 0 %}
										{% for row in datos if row.grua == grua.grua %}
										{% set hora = row.tiempo_total|date("G")%}
										{% set min = row.tiempo_total|date("i") %}
										{% set seg = row.tiempo_total|date("s") %}
										{% set totales = totales|merge({ (aux) : hora*3600+min*60+seg }) %}
										{% set total = total + hora*3600+min*60+seg %}
										<tr>
											<td class="center">
												{{row.camion}}
											</td>
											<td class="center">
												{{row.tiempo_total}}
											</td>
											<td class="center">
												{{(totales[loop.index0]/row.veces)|round(0, 'floor')|date("i:s", false) }} 
											</td>
											<td class="center">
												{{row.veces}}
											</td>
										</tr>
											{% set aux = aux+1 %}
											{% endfor %}
										<tr>
											<td class="center">
												Total :
											</td>
											<td class="center">
												{{total|date("G:i:s", false)}} 
											</td>
										</tr>
									</tbody>
						</table>
				</div>	<!-- /.col -->	
				

				<div class="col-xs-6">
					<div class="widget-box">
						

						<div class="widget-body">
							<div class="widget-main">
								<!-- #section:plugins/charts.flotchart -->
								<div id="piechart-placeholder{{ loop.index }}"></div>

								
								
							</div><!-- /.widget-main -->
						</div><!-- /.widget-body -->
					</div><!-- /.widget-box -->
				</div><!-- /.col -->
					
					
					
			</div><!-- /.row -->
			
	{% if not loop.last or grua.grua == "Grúa-1" %}		
		<div class="hr hr32 hr-dotted"></div>		
	{% endif %}		
		
	{% if loop.length == 1 and grua.grua == "Grúa-1" %}
			<div class="row">
				<div class="page-header"><h1>Sin datos para la Grúa-2 </h1></div>
			</div><!-- /.row -->
	{% endif %}		

{% endfor %}			
				
	
<!-- basic scripts -->

		<!--[if !IE]> -->
		<script type="text/javascript">
			window.jQuery || document.write("<script src='{{ asset('bundles/eye3control/js/jquery.min.js') }}'>"+"<"+"/script>");
		</script>

		<!-- <![endif]-->
		
<!-- page specific plugin scripts -->

		<script src="{{ asset('bundles/eye3control/js/flot/jquery.flot.min.js') }}"></script>
		<script src="{{ asset('bundles/eye3control/js/flot/jquery.flot.pie.min.js') }}"></script>
		<script src="{{ asset('bundles/eye3control/js/flot/jquery.flot.resize.min.js') }}"></script>
		<script src="{{ asset('bundles/eye3control/js/date-time/bootstrap-datepicker.min.js') }}"></script>
		
{# no compatibles con la el menu deslizable, asi que se desactivan , estaban para habilitar la seleccion del calendario con el icono 	
