{% block body %}
	<div class="row" >
		<div class="col-md-4 col-xs-2"></div>
		<div class="col-md-3 col-xs-8">
			<!-- #section:plugins/date-time.datepicker -->
				<form action="#" method="POST">
			<div class="input-group">
				<input class="form-control date-picker" name="fecha" id="id-date-picker-1" type="text" placeholder="{{fecha}}" value="{{fecha}}" />
				<span class="input-group-addon">
					<i class="fa fa-calendar bigger-110"></i>
				</span>
			</div>
				<input type="submit" value="ver">
				</form>
		</div>
	</div>

{% set cantidad_gruas = 2 %}
{% set jumper = 0 %}
{% set gruas_validas =  {} %}
{% set cant_gruas_validas =  {} %}
{% set tiempo_min =  {} %}

{% for grua in 1..cantidad_gruas %}
	{% if datos is not empty %}
		{% if datos[(jumper)]['grua'][5:1] != grua %}
				<div class="row">
					<div class="page-header"><h1>Sin datos para la Grúa {{grua}} </h1></div>
				</div><!-- /.row -->
		{% else %}	
		
			 {% set aux = 0 %}
			
					<div class="row">
						<div class="col-12">
							<div class="page-header"><h1>Camiones en Grúa {{grua}}</h1></div>
						</div>
						<div class="col-12 ">
								<table class="table table-striped table-bordered table-hover">
								{% set minimo = null %}
								{% set titulos = [null, "Dia Max uso", "Dia Min uso", "Prom Mes" , "Dias Activos", "Total uso Mensual"] %} 
								{% set contenido = [ null,'max', 'min', 'prom' , 'dias', 'suma'] %} 
								{% for row in 0..4 %}
									{% if loop.first %}
									<thead>
										<tr>
											<td >
											&nbsp;
											</td>
											{% for camion in camiones %}
											<td class="center">
											{{camion.camion}}
											</td>
											{% endfor %}
										</tr>
									</thead>
									<tbody>
									{% endif %}
										<tr>
											<td class="center">
											{{ cycle(titulos, loop.index )|raw }}
											</td>
											{% set pivote = 0 + jumper %}
											{% for camion in camiones %}
												<td class="center">
												{% if camion.camion == datos[pivote]['camion'] %}
													{{ datos[pivote][ (cycle(contenido, loop.parent.loop.index ))] }} 
													
													{% if loop.parent.loop.first %}
														{% set aux = aux + datos[pivote]['semana'] + 1 %}
													{% endif %}
													
													{% if minimo > datos[pivote]['min'] or minimo is null %}
														{% set minimo = datos[pivote]['min'] %}
													{% endif %}
													
													{% if datos|length > (pivote + datos[pivote]['semana'] + 1) %}
														{% set pivote = pivote + datos[pivote]['semana'] + 1 %}
													{% endif %}
												{% endif %}
												</td>
											
											{% endfor %} {#<!-- /for de camiones -->#}
										</tr>
									{% if loop.last %}
										</tbody>	
										{% set jumper = pivote %}
									{% endif %}
									
								{% endfor %} {#<!-- /for llenando las 5 columnas -->#}
								</table>
						</div>	<!-- /.col -->	
						

						<div class=" col-12 ">
							<div class="widget-box">
								

								<div class="widget-body">
									<div class="widget-main" style="display:flex;">
										<!-- #section:plugins/charts.flotchart -->
										<div id="placeholder{{ grua }}" >{# Gráfico Grúa {grua} #}</div>
										<p id="choices{{ grua }}" style="float:right; width:85px;"></p>
										
										
									</div><!-- /.widget-main -->
								</div><!-- /.widget-body -->
							</div><!-- /.widget-box -->
						</div><!-- /.col -->
							
					</div><!-- /.row -->
					
		{% set gruas_validas = gruas_validas| merge ([ grua ]) %}  
		{% set cant_gruas_validas = cant_gruas_validas| merge ([ aux ]) %}  
		{% set tiempo_min = tiempo_min| merge ([ minimo|split(':') ]) %}  
		
						
		{% endif %}	{#<!-- /if correct grua -->#}	
		
		{% if not loop.last %}		
			<div class="hr hr32 hr-double"></div>		
		{% endif %}		

	{% else %}
		<div class="row">
			<div class="page-header"><h1>Sin datos para la Grúa {{grua}} </h1></div>
		</div><!-- /.row -->
	{% endif %}	{#<!-- /if datos empty -->#}

{% endfor %}{#<!-- /for each grua -->#}						

