{% extends "::base.html.twig" %}

{% block title %}Control Estadisticas{% endblock %}

{% block stylesheets %}
{{ parent() }}
		<link rel="stylesheet" href="{{ asset('bundles/eye3control/css/datepicker.css') }}" />

{% endblock %}

{% block body %}
	<div class="row" >
		<div class="col-md-4 col-xs-2"></div>
		<div class="col-md-3 col-xs-8">
			<!-- #section:plugins/date-time.datepicker -->
				<form action="#" method="POST">
			<div class="input-group">
				<input class="form-control date-picker" name="fecha" id="id-date-picker-1" type="text" placeholder="{{fecha}}" value="{{fecha}}" />
				<span class="input-group-addon">
					<i class="fa fa-calendar bigger-110"></i>
				</span>
			</div>
				<input type="submit" value="ver">
				</form>
		</div>
	</div>

{% set cantidad_gruas = 2 %}
{% set jumper = 0 %}
{% set gruas_validas =  {} %}
{% set cant_gruas_validas =  {} %}
{% set tiempo_min =  {} %}

{% for grua in 1..cantidad_gruas %}
	{% if datos is not empty %}
		{% if datos[(jumper)]['grua'][5:1] != grua %}
				<div class="row">
					<div class="page-header"><h1>Sin datos para la Grúa {{grua}} </h1></div>
				</div><!-- /.row -->
		{% else %}	
		
			 {% set aux = 0 %}
			
					<div class="row">
						<div class="col-12"><!-- titulo -->
							<div class="page-header"><h1>Camiones Mensual - Grúa {{grua}}</h1></div>
						</div><!-- ./titulo -->
						<div class="col-12 "><!-- tabla -->
								<table class="table table-striped table-bordered table-hover">
								{% set minimo = null %}
									<thead>
										<tr>
											<td >
											&nbsp;
											</td>
											
											<td class="center">
												Dia Max uso
											</td>
											<td class="center">
												Dia Min uso
											</td>
											<td class="center">
												Prom Mes
											</td>
											<td class="center">
												Dias Activos
											</td>
											<td class="center">
												Total uso Mensual
											</td>
											
										</tr>
									</thead>
									<tbody>
										{% set pivote = 0 + jumper %}
										{% for counter in camiones %}
											<tr>
												<td class="center">
													{{ counter["camion"] }} 
												</td>
												<td class="center">
													{% if counter["camion"]==datos[pivote]["camion"] %} {{ datos[pivote]["max"] }} {% endif %} 
												</td>
												<td class="center">
													{% if counter["camion"]==datos[pivote]["camion"] %} {{ datos[pivote]["min"] }}
														{% if minimo > datos[pivote]['min'] or minimo is null %}
															{% set minimo = datos[pivote]['min'] %}
														{% endif %}
													{% endif %} 
												</td>
												<td class="center">
													{% if counter["camion"]==datos[pivote]["camion"] %} {{ datos[pivote]["prom"] }} {% endif %} 
														
												</td>
												<td class="center">
													{% if counter["camion"]==datos[pivote]["camion"] %} {{ datos[pivote]["semana"] }} {% endif %} 
												</td>
												<td class="center">
													{% if counter["camion"]==datos[pivote]["camion"] %} {{ datos[pivote]["suma"] }} {% endif %} 
												</td>
											
												
											</tr>
											{% if counter["camion"]==datos[pivote]["camion"] %}
													{% if datos|length > (pivote + datos[pivote]['semana'] + 1) %}
														{% set pivote = pivote + datos[pivote]['semana'] + 1 %}
													{% else %}
														{% set pivote = pivote + datos[pivote]["semana"] %}
													{% endif %}
											{% endif %} 
										{% endfor %}
									</tbody>	
									
									
								</table>
						</div>	<!-- /.col -->	
						

						<div class=" col-12 ">
							<div class="widget-box">
								<div class="widget-header widget-header-flat widget-header-small">
									<h5 class="widget-title">
										Operación Mensual - Grúa {{ grua }}
									</h5>
								</div>

								<div class="widget-body">
									<div class="widget-main" style="display:flex;">
										<!-- #section:plugins/charts.flotchart -->
										<div id="placeholder{{ grua }}" >{# Gráfico Grúa {grua} #}</div>
										<p id="choices{{ grua }}" style="float:right; width:85px;"></p>
										
										
									</div><!-- /.widget-main -->
								</div><!-- /.widget-body -->
							</div><!-- /.widget-box -->
						</div><!-- /.col -->
							
					</div><!-- /.row -->
		{% if (datos|length)-1 > pivote %}
			{% set jumper = pivote %}
		{% else %}
			{% set pivote = pivote + 1 %}			
		{% endif %}			
		{% set gruas_validas = gruas_validas| merge ([ grua ]) %}  
		{% set cant_gruas_validas = cant_gruas_validas| merge ([ pivote ]) %}  
		{% set tiempo_min = tiempo_min| merge ([ minimo|split(':') ]) %}  
		
						
		{% endif %}	{#<!-- /if correct grua -->#}	
		
		{% if not loop.last %}		
			<div class="hr hr32 hr-double"></div>		
		{% endif %}		

	{% else %}
		<div class="row">
			<div class="page-header"><h1>Sin datos para la Grúa {{grua}} </h1></div>
		</div><!-- /.row -->
	{% endif %}	{#<!-- /if datos empty -->#}

{% endfor %}{#<!-- /for each grua -->#}						


{% block js %}{% endblock %}
<!-- basic scripts -->
		<!--[if !IE]> -->
		<script type="text/javascript">
			window.jQuery || document.write("<script src='{{ asset('bundles/eye3control/js/jquery.min.js') }}'>"+"<"+"/script>");
		</script>

