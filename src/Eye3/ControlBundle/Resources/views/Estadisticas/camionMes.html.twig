	{% set corte = 0 %}
	
	
	{% for grua in gruas_validas %}
				  var placeholder{{grua}} = $('#placeholder{{grua}}').css({'width':'85%' , 'min-height':'230px'});
					
				  var graficame{{grua}} =  [
