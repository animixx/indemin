{% extends '::base.html.twig' %}

{% block body -%}
	<div class="page-header"><h1>Datos</h1></div>
	
    <table id="sample-table-2" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="center">Id</th>
                <th class="center">Camion</th>
                <th class="center">Grua</th>
                <th class="center">Inicio</th>
                <th class="center">Duracion</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="center">{{ entity.id }}</td>
                <td class="center">{{ entity.camion }}</td>
                <td class="center">{{ entity.grua }}</td>
                <td class="center">{% if entity.inicio %}{{ entity.inicio|date('Y-m-d H:i') }}{% endif %}</td>
                <td class="center">{{ entity.duracion|date('i:s') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
