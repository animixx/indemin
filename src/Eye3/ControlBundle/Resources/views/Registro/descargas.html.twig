{% extends '::base.html.twig' %}
{% block body %}
{% set meses = ["Enero","Febrero","Marzo","Abril","Mayo","Junio","Julio","Agosto","Septiembre","Octubre","Noviembre","Diciembre"] %}
		<div class="col-12">
			<div class="page-header"><h1>Descargas </h1></div>
		</div>
		<div class="col-12">
			<div class="col-md-5 col-xs-12">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th class="center">
									Semana (Lun-Dom)
								</th>
								<th class="center">
									Historial
								</th>
								<th class="center">
									Reporte
								</th>
							
								
							</tr>
						</thead>
						<tbody>
						{% for anyo in ("now"|date("Y"))..(desde|date("Y")) %}
							<tr>
								<td class="center">
									fecha{{anyo}}
								</td>
								<td class="center">
									excel
								</td>
								<td class="center">
									pdf
								</td>
							</tr>
						{% endfor %}
						</tbody>
				</table>
			</div>
			<div class="col-md-5 col-xs-12">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th class="center">
									Mes
								</th>
								<th class="center">
									Historial
								</th>
								<th class="center">
									Reporte
								</th>
							
								
							</tr>
						</thead>
						<tbody>
						{% for anyo in ("now"|date("Y"))..(desde|date("Y")) %}
						{% set comienzo = ((loop.first)?("now"|date("n"))-1:12)%}
						{% set termino = ((loop.last)?(desde|date("n")):1)%}
							{% for innermes in comienzo..termino %}
								<tr>
									<td class="center">
										{{meses[(innermes-1)]}}-{{anyo}}
									</td>
									<td class="center">
										<a href={{path('reporte_mensual')}}>excel</a>
									</td>
									<td class="center">
										<a href={{path('reporte_mensual')}}>pdf</a>
									</td>
								</tr>
							{% endfor %}
						{% endfor %}
						</tbody>
				</table>
			</div>
		</div>
		

{% endblock %}